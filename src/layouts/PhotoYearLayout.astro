    font-weight: 100;
    letter-spacing: 0.2em;
    color: #fff;
    text-shadow: 0 2px 20px rgba(0, 0, 0, 0.5);
  }

  @media (max-width: 768px) {
    .other-years {
      padding: 3rem 1rem;
    }

    .years-grid {
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 1rem;
    }

    .other-years-title {
      margin-bottom: 2rem;
    }

    .share-button {
      padding: 0.875rem 1.75rem;
      font-size: 0.875rem;
    }
