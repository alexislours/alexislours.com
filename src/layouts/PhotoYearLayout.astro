    to {
      opacity: 1;
    }
  }

  .year-title {
    font-size: clamp(4rem, 15vw, 12rem);
    font-weight: 100;
    letter-spacing: 0.2em;
    margin: 0;
    color: #fff;
  }

  .photo-count {
