  .photo-wrapper {
    position: relative;
    box-shadow: 0 20px 80px rgba(0, 0, 0, 0.6);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .photo-img {
    max-width: 100%;
    max-height: calc(100vh - 16rem);
    width: auto;
    height: auto;
    object-fit: contain;
    display: block;
    border-radius: 4px;
    opacity: 0;
    transition: opacity 0.8s cubic-bezier(0.16, 1, 0.3, 1);
  }

