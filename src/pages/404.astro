---
import { Picture } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import kingfisherImage from "../assets/404-kingfisher.png";

const title = "404 - Page Not Found";
const description = "The page you're looking for doesn't exist.";
---

<Layout
  title={title}
  description={description}>
  <div
    class="flex min-h-screen flex-col items-center justify-center bg-gradient-to-br from-slate-50 to-gray-100 px-4 py-12">
    <div class="text-center">
      <Picture
        src={kingfisherImage}
        alt="Confused kingfisher with question marks"
        class="mx-auto mb-8 h-auto w-64 sm:w-80 md:w-96"
        formats={["avif"]}
        fallbackFormat="png"
        width={400}
        height={400}
        loading="eager"
        fetchpriority="high"
      />
      <div class="space-y-4">
        <h1 class="text-6xl font-bold text-gray-800 sm:text-7xl md:text-8xl">
          404
        </h1>
        <h2 class="text-2xl font-semibold text-gray-700 sm:text-3xl">
          Oops! Page Not Found
        </h2>
        <p class="mx-auto max-w-md text-lg text-gray-600">
          The page you're looking for seems to have flown away!
        </p>
      </div>
      <div
        class="mt-8 flex flex-col items-center gap-4 sm:flex-row sm:justify-center">
        <a
          href="/"
          data-umami-event="Go to home from 404"
          class="inline-flex items-center gap-2 rounded-lg border border-gray-300 bg-white px-6 py-3 font-medium text-gray-700 transition-colors hover:bg-gray-50 focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 focus:outline-none">
          <svg
            class="h-5 w-5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
            ></path>
          </svg>
          Go Home
        </a>
      </div>
    </div>
  </div>
</Layout>
