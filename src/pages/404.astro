---
import { Picture } from "astro:assets";
import Layout from "@layouts/Layout.astro";
import kingfisherImage from "@assets/404-kingfisher.png";

const title = "404 - Page Not Found";
const description = "The page you're looking for doesn't exist.";
---

<Layout
  title={title}
  description={description}>
  <div
    class="flex min-h-screen flex-col items-center justify-center bg-white px-4 py-16">
    <div class="text-center">
      <Picture
        src={kingfisherImage}
        alt="Confused kingfisher with question marks"
        class="mx-auto mb-12 h-auto w-64 opacity-90 sm:w-80 md:w-96"
        formats={["avif"]}
        fallbackFormat="png"
        width={400}
        height={400}
        loading="eager"
        fetchpriority="high"
      />
      <div class="space-y-8">
        <div class="space-y-4">
          <h1
            class="font-serif text-8xl font-light tracking-tight text-gray-900 sm:text-9xl">
            404
          </h1>
          <div class="mx-auto h-px w-16 bg-gray-200"></div>
        </div>
        <div class="space-y-3">
          <h2
            class="font-serif text-2xl font-light tracking-tight text-gray-900 sm:text-3xl">
            Page Not Found
          </h2>
          <p
            class="mx-auto max-w-sm font-sans text-sm leading-relaxed text-gray-600">
            The page you're looking for seems to have flown away
          </p>
        </div>
      </div>
      <div class="mt-12">
        <a
          href="/"
          data-umami-event="Go to home from 404"
          class="group inline-flex items-center gap-2 border-b border-gray-900 pb-1 font-sans text-sm font-medium text-gray-900 transition-all hover:border-gray-600 hover:text-gray-600 focus:outline-none">
          <svg
            class="h-4 w-4 transition-transform group-hover:-translate-x-0.5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M10 19l-7-7m0 0l7-7m-7 7h18"
            ></path>
          </svg>
          Return Home
        </a>
      </div>
    </div>
  </div>
</Layout>
